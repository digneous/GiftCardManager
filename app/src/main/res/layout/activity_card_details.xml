<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#ffffff">

        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient"
            android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <!-- Logo Start-->
            <ImageView android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"/>
            <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->

        <!-- Footer Start -->
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:background="@layout/footer_repeat"
            android:layout_alignParentBottom="true">
        </LinearLayout>
        <!-- Footer Ends -->
        <!-- Card Details Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_below="@id/header">
            <!--  Card Number Label -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">
                <Button android:id="@+id/btnSave1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_gravity="left"
                    android:text="Back"/>
                <Button android:id="@+id/btnSave2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_gravity="end"
                    android:text="Edit" />

                <Button android:id="@+id/SignOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="Sign Out"
                    android:layout_gravity="right"
                    android:onClick="signout"
                    android:layout_marginLeft="100dp" />


            </LinearLayout>

            <TextView android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Card Number"/>
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:text="2222 3565 6767 7890"
                android:singleLine="true"
                android:id="@+id/cardnumber" />
            <!--  Card Value Label -->
            <TextView android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Card Value"/>
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:text="50"
                android:singleLine="true"
                android:id="@+id/amount" />
            <!--  Card cvv Label -->
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Card cvv"/>
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:text="019"
                android:id="@+id/cvv" />
            <!--  Card Expiry Label -->
            <TextView android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Card Expiry"/>


            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:text="01/18"
                android:singleLine="true"
                android:id="@+id/expiry" />



            <TextView android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Card Type"/>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

            <RadioGroup android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/Radiob">
                <RadioButton android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:text="Gift" android:id="@+id/Gift"  android:checked="true"/>
                <RadioButton android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:text="Use" android:id="@+id/Use" />
            </RadioGroup>
        </RelativeLayout>


            <!-- Save button -->
            <Button android:id="@+id/btnSave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Save"
                android:clickable="true"
                android:enabled="true"
                android:onClick="saveCard" />
            <!-- Delete button -->
            <Button android:id="@+id/btnDelete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Delete"/>


        </LinearLayout>
        <!-- Card Details Form Ends -->
    </RelativeLayout>
</ScrollView>
