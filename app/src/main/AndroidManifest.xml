<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.home.giftcardmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Entry for RegisterActivity.class -->
        <activity
            android:name=".RegisterActivity"
            android:label="Register New Account" />
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page" >
        </activity>
        <activity
            android:name=".CardDetailsActivity"
            android:label="@string/title_activity_card_details" >
        </activity>
        <activity
            android:name=".TransferActivity"
            android:label="@string/title_activity_transfer" >
        </activity>
        <activity
            android:name=".TransactionHistoryActivity"
            android:label="@string/title_activity_transaction_history" >
        </activity>
    </application>

</manifest>
